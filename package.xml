<?xml version="1.0"?>
<package format="2">
  <name>mrs_bumper</name>
  <version>1.0.0</version>
  <description>Program for publishing bumper messages for reactive collision avoidance</description>

  <maintainer email="vrbamato@fel.cvut.cz">Matouš Vrba</maintainer>

  <license>free of charge</license>

  <author email="vrbamato@fel.cvut.cz">Matouš Vrba</author>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>roscpp</depend>
  <depend>dynamic_reconfigure</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>
  <depend>mrs_lib</depend>
  <depend>nodelet</depend>
  <depend>mrs_msgs</depend>

  <exec_depend>message_runtime</exec_depend>

  <export>
    <!-- Other tools can request additional information be placed here -->
    <nodelet plugin="${prefix}/bumper_nodelet.xml" />

    generate_messages_cpp
  </export>

</package>
